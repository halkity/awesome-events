- now = Time.zone.now

%h1.mt-3 イベント作成

= form_with(model: @event, class: "form-horizontal") do |f|
  #errors
  .form-group
    = f.label :name
    = f.text_field :name, class: "form-control"
  .form-group
    = f.label :place
    = f.text_field :place, class: "form-control"
  .form-group
    = f.label :start_at
    %div
      = raw sprintf( f.date_select(:start_at, use_month_numbers: true, start_year: now.year, end_year: now.year + 1, minute_step: 10, class: "form-control", date_separator: '%s'), '年 ', '月 ') + '日'
  .form-group
    = f.label :end_at
    %div
      = raw sprintf( f.date_select(:end_at, use_month_numbers: true, start_year: now.year, end_year: now.year + 1, minute_step: 10, class: "form-control", date_separator: '%s'), '年 ', '月 ') + '日'
  .form-group
    = f.label :content
    = f.text_area :content, class: "form-control", row: 10
  = f.submit class: "btn btn-primary"